<% blogs.forEach(function(blog){ %>
    <div class="container" style="max-width: 540px;">
        <div class="thumbnail">
            <h1 class="display-4 heading"><%= blog.title %></h1>
            <div class="card mb-3">
                <img class="img-responsive" src="<%= blog.image %>" class="card-img-top" >
                <div class="card-body">
                <h5 class="card-title"> <%= blog.title %></h5>
                <p class="card-text"><%= blog.body.substring(0, 100) %>...</p>
                <p class="card-text"><small class="text-muted"><%= blog.created.toDateString() %></small></p>
                </div>
            </div>
            <div>
                <a href="/category/<%= category._id %>/blogs/<%= blog._id %>" class="btn btn-primary btn-large">Read more</a>
            </div>
        </div>
    </div>
<% }) %>